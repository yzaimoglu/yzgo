# -- GENERAL CONFIGURATION
APP_NAME=Backend
APP_VERSION="alpha-1.0.0"
DEBUG=true
TIME_FORMAT="02.01.2006T15:04:05"
TIME_ZONE="Europe/Berlin"

# -- WEBSERVER CONFIGURATION
PORT=3000
SERVER_HEADER=Backend
PREFORK=true
# Cors
CORS_ENABLED=true
CORS_ALLOW_ORIGINS="*"
CORS_ALLOW_METHODS="*"
CORS_ALLOW_CREDENTIALS=true
# Middleware
COMPRESS_ENABLED=true
RECOVER_ENABLED=true
CSRF_ENABLED=true
HELMET_ENABLED=true
# Metrics
METRICS_ENABLED=true
METRICS_USER=admin
METRICS_PASSWORD=admin
# Logging
LOG_ENABLED=true
LOG_FORMAT="[${time}] [http] [${status}] ${method} ${path} - ${ip} | ${latency}\n"
LOG_PATH=logs
LOG_FILE=access.log

# -- DATABASE CONFIGURATION
# Supported database types: sql, nosql
# Supported sql databases: postgres, sqlite3
# Supported nosql databases: surrealdb
DB_TYPE="nosql"
DB=surrealdb
DB_HOST=localhost
DB_PORT=8192
DB_USER=backend
DB_PASSWORD=backend
DB_NAMESPACE=backend
DB_DATABASE=backend
DB_AUTH_ENABLED=true

# -- CACHE CONFIGURATION
# Supported caches: redis, memcached
CACHE=redis
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=backend
CACHE_DATABASE=0

# -- STRIPE CONFIGURATION
STRIPE_ENABLED=false
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=